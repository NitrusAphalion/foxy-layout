<Window x:Class="FoxyLayout.FoxyScreen"
        x:ClassModifier="internal"
        x:Name="foxyScreen"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
        xmlns:local="clr-namespace:FoxyLayout"
        mc:Ignorable="d" 
        AllowsTransparency="True" 
        Background="Transparent"
        ShowInTaskbar="False"
        WindowStyle="None" >
    <Canvas x:Name="foxyCanvas" Background="Transparent" Width="{Binding ElementName=foxyScreen, Path=Width}" Height="{Binding ElementName=foxyScreen, Path=Height}"/>
</Window>
